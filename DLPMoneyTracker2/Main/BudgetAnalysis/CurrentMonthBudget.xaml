<UserControl
    x:Class="DLPMoneyTracker2.Main.BudgetAnalysis.CurrentMonthBudget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behave="clr-namespace:DLPMoneyTracker2.Core.Behaviors"
    xmlns:core="clr-namespace:DLPMoneyTracker2.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:DLPMoneyTracker2.Main.BudgetAnalysis"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1000"
    Height="650"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style
            x:Key="LocalHeaderLabels"
            BasedOn="{StaticResource StandardHeaderLabel}"
            TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="18" />
        </Style>

        <core:BindingProxy x:Key="DataProxy" Data="{Binding}" />
    </UserControl.Resources>

    <Grid Style="{StaticResource MainGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="15" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="15" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="panelDataGrids" Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="450" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Margin="131,0,0,0"
                HorizontalAlignment="Left"
                FontSize="16"
                Style="{StaticResource StandardHeaderLabel}"
                Text="Fixed Expenses" />

            <DataGrid
                x:Name="dataFixedExpenses"
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,0,0,0"
                ItemsSource="{Binding Path=FixedExpenses, UpdateSourceTrigger=PropertyChanged}">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Path=AccountDesc}"
                        Header="Description" />

                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Path=MonthlyBudget, Converter={StaticResource convertDecimalToDisplay}, ConverterParameter=c, UpdateSourceTrigger=PropertyChanged}"
                        Header="Budget" />

                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Path=CurrentMonthTotal, Converter={StaticResource convertDecimalToDisplay}, ConverterParameter=c, UpdateSourceTrigger=PropertyChanged}"
                        Header="Current" />

                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Margin="0"
                                    Command="{Binding Path=Data.CommandShowDetail, Source={StaticResource DataProxy}}"
                                    CommandParameter="{Binding Path=Account}"
                                    Style="{StaticResource MenuButton}">
                                    <Button.Content>
                                        <Image Source="/Icons/Stock-Exchange-256.png" />
                                    </Button.Content>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>


            <StackPanel
                x:Name="pnlVariableExpenses"
                Grid.Column="2"
                Margin="120,0,0,0"
                Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Left"
                    FontSize="16"
                    Style="{StaticResource StandardHeaderLabel}"
                    Text="Variable Expenses" />
                <Button
                    Command="{Binding Path=CommandResetBudgets}"
                    Style="{StaticResource MenuButton}"
                    ToolTip="Reset Budgets">
                    <Button.Content>
                        <Image Source="/Icons/Refresh-256.png" />
                    </Button.Content>
                </Button>

            </StackPanel>





            <DataGrid
                x:Name="dataVariableExpense"
                Grid.Row="1"
                Grid.Column="2"
                Margin="5,0,5,0"
                ItemsSource="{Binding Path=VariableExpenses, UpdateSourceTrigger=PropertyChanged}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Path=AccountDesc}"
                        Header="Description" />


                    <DataGridTemplateColumn Width="120" Header="Budget">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBox Width="100" Text="{Binding Path=MonthlyBudgetAmount, Mode=TwoWay, Converter={StaticResource convertDecimalToDisplay}, UpdateSourceTrigger=LostFocus}">
                                        <i:Interaction.Behaviors>
                                            <behave:TextBoxFocusBehavior />
                                        </i:Interaction.Behaviors>
                                    </TextBox>


                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                    <DataGridTemplateColumn Width="100" Header="Current">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        Foreground="{Binding Path=CurrentValueFontColor, UpdateSourceTrigger=PropertyChanged}"
                                        Text="{Binding Path=CurrentMonthTotal, Converter={StaticResource convertDecimalToDisplay}, ConverterParameter=c, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Margin="0"
                                    Command="{Binding Path=Data.CommandShowDetail, Source={StaticResource DataProxy}}"
                                    CommandParameter="{Binding Path=Account}"
                                    Style="{StaticResource MenuButton}">
                                    <Button.Content>
                                        <Image Source="/Icons/Stock-Exchange-256.png" />
                                    </Button.Content>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid
            x:Name="panelTotals"
            Grid.Row="2"
            Margin="10,0,50,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="320" />
            </Grid.ColumnDefinitions>



            <Grid
                x:Name="panelMonthlyIncome"
                Grid.Row="0"
                HorizontalAlignment="Left"
                Background="{StaticResource IncomeBackground}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="Monthly Income" />

                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="{Binding Path=TotalBudgetIncome, Converter={StaticResource convertDecimalToDisplay}, FallbackValue=0.00, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <Grid
                x:Name="panelFixedExpenseBudget"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Background="#FFF0CC8B">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="Fixed Budget" />

                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="{Binding Path=FixedExpenseBudgetTotal, Converter={StaticResource convertDecimalToDisplay}, FallbackValue=0.00, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <Grid
                x:Name="panelVariableExpenseBudget"
                Grid.Row="2"
                HorizontalAlignment="Left"
                Background="{StaticResource ExpenseBackground}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="Variable Budget" />

                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="{Binding Path=VariableExpenseBudgetTotal, Converter={StaticResource convertDecimalToDisplay}, FallbackValue=0.00, UpdateSourceTrigger=PropertyChanged}" />

            </Grid>

            <Grid
                x:Name="panelUnallocatedBudget"
                Grid.Row="3"
                HorizontalAlignment="Left"
                Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="Unallocated" />

                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="{Binding Path=UnallocatedBudget, Converter={StaticResource convertDecimalToDisplay}, FallbackValue=0.00, UpdateSourceTrigger=PropertyChanged}" />

            </Grid>







            <Grid
                x:Name="panelFixedExpenseCurrent"
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Left"
                Background="#FFF0CC8B">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="Fixed Current" />

                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="{Binding Path=FixedExpenseCurrent, Converter={StaticResource convertDecimalToDisplay}, FallbackValue=0.00, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <Grid
                x:Name="panelVariableExpenseCurrent"
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Left"
                Background="{StaticResource ExpenseBackground}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="Variable Current" />

                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="{Binding Path=VariableExpenseCurrent, Converter={StaticResource convertDecimalToDisplay}, FallbackValue=0.00, UpdateSourceTrigger=PropertyChanged}" />

            </Grid>




            <Grid
                x:Name="panelBalance"
                Grid.Row="3"
                Grid.Column="2"
                HorizontalAlignment="Right"
                Background="#FF77A2FD">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="Monthly Balance" />

                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource LocalHeaderLabels}"
                    Text="{Binding Path=MonthlyBalance, Converter={StaticResource convertDecimalToDisplay}, FallbackValue=0.00, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>