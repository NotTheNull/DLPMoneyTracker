<Window x:Class="DLPMoneyTracker2.Reports.IncomeStatement.IncomeStatementUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DLPMoneyTracker2.Reports.IncomeStatement"
        mc:Ignorable="d"
        Icon="/Icons/Library-Books-256.png"
        Title="Income Statement" 
        Height="900" 
        Width="1200">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="GridHeading" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource DefaultUIBackgroundColor}">

        <Grid.RowDefinitions>
            <!-- Toolbar? -->
            <RowDefinition Height="Auto" />

            <!-- Padding -->
            <RowDefinition Height="15" />

            <!-- Filter buttons -->
            <RowDefinition Height="Auto" />

            <!-- Content -->
            <RowDefinition Height="*" />
            
            <!-- Totals -->
            <RowDefinition Height="50" />

            <!-- Bottom Padding -->
            <RowDefinition Height="15" />

        </Grid.RowDefinitions>

        <!-- Toolbar (if needed) -->

        <!-- Filter buttons (year, month) -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Year"
                       Grid.Column="1"
                       Style="{StaticResource StandardHeaderLabel}"
                       />
            <TextBox Grid.Column="2" 
                     Text="{Binding Path=SelectedYear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource convertNumberToDisplay}}"
                     />

            <TextBlock Text="Month"
                       Grid.Column="4"
                       Style="{StaticResource StandardHeaderLabel}"
                       />

            <ComboBox Grid.Column="5"
                      Width="160"
                      ItemsSource="{Binding Path=MonthList}"
                      SelectedValue="{Binding Path=SelectedMonth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      DisplayMemberPath="Display"
                      SelectedValuePath="Value"
                />

            <Button Grid.Column="6" Content="Load" Margin="10,0,0,0" />

        </Grid>

        <!-- Content -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>                
                <RowDefinition Height="15" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition />
                <ColumnDefinition Width="15"/>
                <ColumnDefinition />
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       Text="Income"
                       Style="{StaticResource GridHeading}"
                       />

            <!-- Income accounts -->
            <DataGrid Grid.Row="2"
                      Grid.Column="1"
                      >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Account Name" />
                    <DataGridTextColumn Header="Total" />
                </DataGrid.Columns>
            </DataGrid>
            


            <TextBlock Grid.Row="1"
                       Grid.Column="3"
                       Text="Expenses"
                       Style="{StaticResource GridHeading}"
                       />

            <!-- Expense accounts -->
            <DataGrid Grid.Row="2"
                      Grid.Column="3"
                      >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Account Name" />
                    <DataGridTextColumn Header="Total" />
                </DataGrid.Columns>
            </DataGrid>


        </Grid>

        <!-- Totals -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Window>
