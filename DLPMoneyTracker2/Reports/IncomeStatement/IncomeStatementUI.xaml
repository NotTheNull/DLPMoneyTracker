<Window
    x:Class="DLPMoneyTracker2.Reports.IncomeStatement.IncomeStatementUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DLPMoneyTracker2.Reports.IncomeStatement"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Income Statement"
    Width="1200"
    Height="900"
    Icon="/Icons/Library-Books-256.png"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <Style
                x:Key="GridHeading"
                BasedOn="{StaticResource StandardHeaderLabel}"
                TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="24" />
            </Style>

            <Style x:Key="Totals" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <local:IncomeStatementVM x:Name="viewModel" />
    </Window.DataContext>

    <Grid Background="{StaticResource DefaultUIBackgroundColor}">

        <Grid.RowDefinitions>
            <!--  Toolbar?  -->
            <RowDefinition Height="Auto" />

            <!--  Padding  -->
            <RowDefinition Height="15" />

            <!--  Filter buttons  -->
            <RowDefinition Height="Auto" />

            <!--  Totals  -->
            <RowDefinition Height="80" />

            <!--  Content  -->
            <RowDefinition Height="*" />


            <!--  Bottom Padding  -->
            <RowDefinition Height="15" />

        </Grid.RowDefinitions>

        <!--  Toolbar (if needed)  -->

        <StackPanel
            Grid.Row="0"
            Background="LightGray"
            Orientation="Horizontal">
            <Button
                x:Name="btnCloseWindow"
                Click="btnCloseWindow_Click"
                Style="{StaticResource MenuButton}"
                ToolTip="Close Window">
                <Image Source="/Icons/Leave-256.png" />
            </Button>

        </StackPanel>

        <!--  Filter buttons (year, month)  -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="1"
                Style="{StaticResource StandardHeaderLabel}"
                Text="Year" />
            <TextBox Grid.Column="2" Text="{Binding Path=SelectedYear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource convertNumberToDisplay}}" />

            <TextBlock
                Grid.Column="4"
                Style="{StaticResource StandardHeaderLabel}"
                Text="Month" />

            <ComboBox
                Grid.Column="5"
                Width="160"
                DisplayMemberPath="Display"
                ItemsSource="{Binding Path=MonthList}"
                SelectedValue="{Binding Path=SelectedMonth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedValuePath="Value" />

            <Button
                Grid.Column="6"
                Margin="10,0,0,0"
                Content="Load" />

        </Grid>

        <!--  Totals  -->
        <Grid Grid.Row="3" Margin="10,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--  Income Total  -->
            <Grid Grid.Column="0" Background="{StaticResource IncomeBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource Totals}"
                    Text="Income Total" />

                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource Totals}"
                    Text="{Binding Path=TotalIncome, Converter={StaticResource convertDecimalToDisplay}, ConverterParameter=c, FallbackValue=0.00}" />
            </Grid>

            <!--  Profits  -->
            <Grid Grid.Column="1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource Totals}"
                    Text="Profit" />

                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource Totals}"
                    Text="{Binding Path=TotalProfit, Converter={StaticResource convertDecimalToDisplay}, ConverterParameter=c, FallbackValue=0.00}" />
            </Grid>

            <!--  Expense Total  -->
            <Grid Grid.Column="2" Background="{StaticResource ExpenseBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource Totals}"
                    Text="Expense Total" />

                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource Totals}"
                    Text="{Binding Path=TotalExpense, Converter={StaticResource convertDecimalToDisplay}, ConverterParameter=c, FallbackValue=0.00}" />
            </Grid>


        </Grid>


        <!--  Content  -->
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="15" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="15" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition />
                <ColumnDefinition Width="15" />
                <ColumnDefinition />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource GridHeading}"
                Text="Income" />

            <!--  Income accounts  -->
            <DataGrid Grid.Row="2" Grid.Column="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Account Name" />
                    <DataGridTextColumn Header="Total" />
                </DataGrid.Columns>
            </DataGrid>



            <TextBlock
                Grid.Row="1"
                Grid.Column="3"
                Style="{StaticResource GridHeading}"
                Text="Expenses" />

            <!--  Expense accounts  -->
            <DataGrid Grid.Row="2" Grid.Column="3">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Account Name" />
                    <DataGridTextColumn Header="Total" />
                </DataGrid.Columns>
            </DataGrid>


        </Grid>


    </Grid>
</Window>
