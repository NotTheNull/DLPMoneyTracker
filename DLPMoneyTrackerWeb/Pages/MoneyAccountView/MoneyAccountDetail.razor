@page "/MoneyAccountDetail/{AccountID}"

@inject MoneyAccountDetailVM viewModel

<div class="row">
    <div class="col-12">
        <h1>ACCOUNT: @viewModel.AccountDesc</h1>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table>
            <thead>
                <tr>
                    <th>Transaction Date</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Amount</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var money in viewModel.Transactions)
                {
                    <tr>
                        <td>@money.TransDate</td>
                        <td>@viewModel.GetCategoryName(money.CategoryUID)</td>
                        <td>@money.Description</td>
                        <td>@money.TransAmount</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>


@code {
    private string _id;

    [Parameter]
    public string AccountID
    {
        get { return _id; }   
        set
        {
            _id = value;
            viewModel.LoadAccount(_id);
            StateHasChanged();
        }
    }

    public void Refresh()
    {
        viewModel.Refresh();
        StateHasChanged();
    }


}
