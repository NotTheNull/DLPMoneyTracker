@using DLPMoneyTracker.Data.ConfigModels;

@inject EditMoneyAccountService service;




@code {
    EditContext _editContext;
    MoneyAccount _editAccount;

    [Parameter]
    public MoneyAccount EditAccount
    {
        get { return _editAccount; }
        set { _editAccount = value; }
    }

    // NOTE: Change bool to Money Account if you want the data returned through the event
    [Parameter]
    public EventCallback<bool> CloseEventCallback { get; set; }

    public bool ShowDialog { get; set; }

    protected override void OnInitialized()
    {
        if (_editAccount is null) _editAccount = new MoneyAccount();
        _editContext = new EditContext(_editAccount);
    }

}
