<UserControl x:Class="DLPMoneyTracker.ReportViews.JournalViews.JournalDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DLPMoneyTracker.ReportViews.JournalViews"
             mc:Ignorable="d" 
             Height="450"
            Width="750">


    <UserControl.Resources>
        <Style x:Key="LocalLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="5, 0" />
        </Style>

        <Style x:Key="LocalDatePicker" TargetType="DatePicker">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid  Style="{StaticResource MainGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
            <RowDefinition Height="15" />
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0"
                   Text="{Binding Path=HeaderText, FallbackValue=TITLE}"
                   Style="{StaticResource StandardHeaderLabel}"
                   Visibility="{Binding Path=IsFiltersVisible, Converter={StaticResource convertBoolToVisibility}, ConverterParameter=R}"
                   FontSize="22" />

        <Button Grid.Row="0"
                HorizontalAlignment="Right"
                Command="{Binding CommandRefresh}"
                Margin="0, 0, 15, 0"
                Visibility="{Binding Path=IsFiltersVisible, Converter={StaticResource convertBoolToVisibility}, ConverterParameter=R}"
                Style="{StaticResource MenuButton}">
            <Button.Content>
                <Image Source="/Icons/Refresh-256.png" />
            </Button.Content>
        </Button>


        <!-- Filter Controls -->
        <StackPanel Orientation="Horizontal"
                    Visibility="{Binding Path=IsFiltersVisible, Converter={StaticResource convertBoolToVisibility}}"
                    Height="30"
                    Grid.Row="0">
            <TextBlock Text="Date Range"
                       Style="{StaticResource LocalLabel}"
                       />
            <DatePicker Style="{StaticResource LocalDatePicker}" 
                        SelectedDate="{Binding Path=FilterBeginDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        />
            <TextBlock Text="To"
                       Style="{StaticResource LocalLabel}"
                       />
            <DatePicker Style="{StaticResource LocalDatePicker}" 
                        SelectedDate="{Binding Path=FilterEndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        />

            <TextBlock Text="Search Text"
                       Margin="20, 0, 5, 0"
                       Style="{StaticResource LocalLabel}"/>
            <TextBox Margin="5"
                     Width="200"
                     FontSize="12"
                     Text="{Binding Path=FilterText, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                     />
            <Button Style="{StaticResource MenuButton}"
                    Command="{Binding Path=CommandSearch}"
                    >
                <Button.Content>
                    <Image Source="/Icons/Light-Bulb-256.png" />
                </Button.Content>
            </Button>
        </StackPanel>

        <!-- Data Listing -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Path=DisplayRecordsList}">
            <DataGrid.Columns>
                <DataGridTextColumn SortDirection="Ascending"
                                    Header="Transaction Date"
                                    Binding="{Binding TransactionDate}" />


                <DataGridTextColumn Header="Debit Account"
                                    MinWidth="120"
                                    Binding="{Binding DebitAccountName}" />


                <DataGridTextColumn Header="Credit Account"
                                    MinWidth="120"
                                    Binding="{Binding CreditAccountName}" />


                <DataGridTextColumn 
                    Header="Description" 
                    MinWidth="240"
                    Binding="{Binding TransactionDescription}" />

                <DataGridTemplateColumn Header="Amount" MinWidth="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding TransactionAmount, Converter={StaticResource convertDecimalToDisplay}, ConverterParameter=c}"
                                           HorizontalAlignment="Right" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Main Commands -->
        <Button x:Name="btnClose"
                Grid.Row="2"
                Content="Close"
                Visibility="{Binding Path=IsCloseButtonVisible, Converter={StaticResource convertBoolToVisibility}}"
                IsEnabled="{Binding Path=IsCloseButtonVisible}"
                Click="btnClose_Click" />
    </Grid>
</UserControl>
