<Window x:Class="DLPMoneyTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DLPMoneyTracker"
        xmlns:moneyAcct="clr-namespace:DLPMoneyTracker.DataEntry.AddEditMoneyAccount"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Icon="/Icons/Dollar-256.png"
        Title="DLP Money Tracker" Height="450" Width="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="MenuItemExit_Click">
                    <MenuItem.Icon>
                        <Image Source="/Icons/Leave-256.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Config">
                <MenuItem Header="_Edit Money Accounts" Click="MenuItemEditMoneyAccount_Click">
                    <MenuItem.Icon>
                        <Image Source="/Icons/Dollar-256.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <Grid Background="{StaticResource DefaultUIBackgroundColor}">


            
        </Grid>
    </DockPanel>


</Window>
